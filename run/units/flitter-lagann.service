[Unit]
Description=Lagann

[Service]
TimeoutStartSec=30m
ExecStartPre=/usr/bin/docker pull flitter/lagann
ExecStartPre=-/usr/bin/docker rm -f flitter-lagann
ExecStart=/usr/bin/docker run --name flitter-lagann -v /var/run/fleet.sock:/fleet.sock -v /var/run/docker.sock:/var/run/docker.sock -v /etc/environment:/host-environment:ro --hostname lagann flitter/lagann
ExecStop=/usr/bin/docker rm -f flitter-lagann
Restart=on-failure
RestartSec=5
